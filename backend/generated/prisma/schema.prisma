generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sales {
  id          Int      @id @default(autoincrement()) // primary key
  email       String
  product     String
  weight      Float
  rate        Float
  labour_cost Float
  total       Float
  date        DateTime
  time        DateTime

  @@map("sales")
}

model GstSales {
  email           String
  element         String
  bill_no         String   @unique
  purity          String
  mode_of_payment String
  date            DateTime
  weight          Float
  rate            Float
  cost_exc_gst    Float
  cgst            Float
  sgst            Float
  total           Float

  @@map("gst_sales")
}

model CustomBill {
  id       Int    @id @default(autoincrement())
  email    String
  cost     Float
  quantity Int
  total    Float

  @@map("custombills")
}

model Orders {
  id      Int      @id @default(autoincrement())
  date    DateTime
  ph_no   String
  address String
  product String
  purity  String
  weight  Float
  rate    Float
  deposit Float
  total   Float

  @@map("orders")
}
